<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
    </style>
    <style name="FullScreenDialogStyle" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>

        <item name="android:windowBackground">@color/color_background_new</item>

        <item name="colorPrimaryDark">@color/light_theme_accent</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/light_theme_accent</item>
    </style>

    <style name="WidgetProgressBarHorizontalCustom" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal_custom</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>


    <style name="Title1Text">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Title2Text">
        <item name="android:textColor">@color/textTitleColor2</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>

